{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "strictNullChecks": true,
    "allowJs": true,
    "baseUrl": ".", // Set the base directory
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@layouts/*": [
        "src/layouts/*"
      ],
      "@content/*": [
        "src/content/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ]
    }
  }
}