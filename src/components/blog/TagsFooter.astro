---
import { slugifyStr } from "@utils/slugify";

type Props = {
  tags: string[];
};

const { tags } = Astro.props;
---

<div
  class="flex flex-col gap-y-5 lg:flex-row lg:items-center lg:justify-between lg:gap-y-0"
>
  <!-- Badges/Tags -->
  <div>
    {
      tags.map((tag) => (
        <a
          class="m-0.5 inline-flex items-center gap-1.5 rounded-full border border-gray-200 bg-gray-100 px-3 py-2 text-sm text-gray-800 hover:bg-gray-200 focus:bg-gray-200 focus:outline-none"
          href={`/tags/${slugifyStr(tag)}`}
        >
          {tag}
        </a>
      ))
    }
  </div>
  <!-- End Badges/Tags -->
</div>
