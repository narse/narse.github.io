            ></svg
          >
          16
        </button>
        <span
          x-show="isTooltipVisible"
          class="absolute z-10 inline-block rounded bg-white px-2 py-1 text-xs font-medium text-gray-800 opacity-100 shadow-sm transition-opacity"
          role="tooltip"
        >
          Usefull
        </span>
      </div>
      <!-- Divider -->
      <div class="mx-3 block h-3 border-e border-gray-400"></div>

      <!-- Dropdown Button -->
      <div class="relative inline-block">
        <button
          @click="isOpen = !isOpen"
          id="hs-blog-article-share-dropdown"
          type="button"
          class="flex items-center gap-x-2 text-sm text-gray-500 hover:text-gray-800 focus:text-gray-800 focus:outline-none"
          aria-haspopup="menu"
          :aria-expanded="isOpen"
        >
          <svg
            class="size-4 shrink-0"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            ><path d="M4 12v8a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-8"></path>
            <polyline points="16 6 12 2 8 6"></polyline>
            <line x1="12" y1="2" x2="12" y2="15"></line>
          </svg>
          Share
        </button>
        <div
          x-show="isOpen"
          @click.outside="isOpen = false"
          class="absolute -top-36 right-0 z-10 mb-1 w-56 rounded-xl bg-white p-2 shadow-md transition-opacity"
          role="menu"
          aria-orientation="vertical"
        >
          <!-- Dropdown Items -->
