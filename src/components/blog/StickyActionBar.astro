---
import type { CollectionEntry } from "astro:content";
interface Props {
  post: CollectionEntry<"posts">;
}

const { post } = Astro.props;

const originUrl = Astro.url.origin;
---

<!-- Sticky Action Group -->
<div
  class="sticky inset-x-0 bottom-6 text-center"
  x-data="{ showTooltip: null, isOpen: false }"
>
  <div class="inline-block rounded-full bg-white px-4 py-3 shadow-md">
    <div class="flex items-center gap-x-1.5">
      <!-- Button with Tooltip -->
      <div class="relative inline-block" x-data="{ isTooltipVisible: false }">
        <button
          @mouseenter="isTooltipVisible = true"
          @mouseleave="isTooltipVisible = false"
          type="button"
          class="flex items-center gap-x-2 text-sm text-gray-500 hover:text-gray-800 focus:text-gray-800 focus:outline-none"
        >
          <svg
            class="size-4 shrink-0"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            ><path
              d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"
            ></path></svg
          >
          875
        </button>
        <span
          x-show="isTooltipVisible"
          class="absolute z-10 inline-block rounded bg-white px-2 py-1 text-xs font-medium text-gray-800 opacity-100 shadow-sm transition-opacity"
          role="tooltip"
        >
          Like
