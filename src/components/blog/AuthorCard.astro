---
import type { CollectionEntry } from "astro:content";

interface Props {
  post: CollectionEntry<"posts">;
}

const { post } = Astro.props;
const authorName = post.data.author || "Admin";
---

<div class="group mb-8 flex items-center gap-x-3 border-b border-gray-200 pb-8">
  <div class="block shrink-0 focus:outline-none">
    <div class="flex size-10 items-center justify-center rounded-full bg-indigo-100 text-indigo-600 font-semibold">
      {authorName.charAt(0).toUpperCase()}
    </div>
  </div>

  <div class="group block grow focus:outline-none">
    <h5
      class="text-sm font-semibold text-gray-800 group-hover:text-gray-600 group-focus:text-gray-600"
    >
      {authorName}
    </h5>
    <p class="text-sm text-gray-500">Author</p>
  </div>
</div>
