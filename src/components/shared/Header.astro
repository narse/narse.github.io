---
import { SITE_TITLE, SITE_DESCRIPTION } from "@/constants";
---

<header class="border-b border-gray-200 bg-gray-50">
  <div class="mx-auto max-w-340 px-4 py-10 sm:px-6 sm:py-12 lg:px-8 lg:py-14">
    <div
      class="flex flex-col items-start gap-4 md:flex-row md:items-center md:justify-between"
    >
      <div>
        <a href="/">
          <h1
            class="text-2xl font-medium text-gray-900 sm:text-3xl md:text-4xl"
          >
            {SITE_TITLE}
          </h1>
        </a>

        <p class="mt-1.5 text-sm text-gray-500">
          {SITE_DESCRIPTION}
        </p>
      </div>
    </div>
  </div>
</header>
