---
import "../styles/global.css";

import Head from "@components/Head.astro";
import Footer from "@components/shared/Footer.astro";
import Header from "@components/shared/Header.astro";
import { SITE_LANGUAGE } from "@/constants";
import type { SEOProps } from "@/constants";

interface Props extends SEOProps {
  title: string;
}

const { title, ...seoProps } = Astro.props;
---

<!doctype html>
<html lang={SITE_LANGUAGE} class="scroll-smooth">
  <Head title={title} {...seoProps} />
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family:
      cursive,
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }

  body {
    font-family:
      "Gill Sans", "Gill Sans MT", Calibri, "Trebuchet MS", sans-serif;
  }
</style>
